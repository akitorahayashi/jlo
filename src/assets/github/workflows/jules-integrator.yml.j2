name: Jules Integrator

on:
  workflow_dispatch:

permissions:
  contents: write
  issues: write
  pull-requests: write

concurrency:
  group: 'jules-integrator'
  cancel-in-progress: false

env:
  JLO_TARGET_BRANCH: '{{ target_branch }}'
  JULES_WORKER_BRANCH: '{{ worker_branch }}'

jobs:
  run-integrator:
    runs-on: {{ runner }}
    steps:
      - name: Validate branch variables
        run: |
          set -euo pipefail
          if [ -z "${JLO_TARGET_BRANCH:-}" ]; then
            echo "::error::JLO_TARGET_BRANCH is required."
            exit 1
          fi
          if [ -z "${JULES_WORKER_BRANCH:-}" ]; then
            echo "::error::JULES_WORKER_BRANCH is required."
            exit 1
          fi

      - uses: actions/checkout@v4
        with:
          ref: '{{ worker_branch }}'
          fetch-depth: 0
          token: {{ gha_expr("secrets.JLO_BOT_TOKEN") }}

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Validate gh availability
        run: |
          set -euo pipefail
          if ! command -v gh &>/dev/null; then
            echo "::error::gh CLI is required but not found."
            exit 1
          fi
          gh --version

      - name: Run integrator
        env:
          JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
        run: |
          set -euo pipefail
          jlo workflow run integrator
