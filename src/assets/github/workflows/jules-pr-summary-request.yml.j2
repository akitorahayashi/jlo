name: Jules PR Summary Request

on:
  pull_request:
    types: [opened]
    branches:
      - '{{ worker_branch }}'

permissions:
  contents: read
  pull-requests: write
  issues: write

env:
  JLO_TARGET_BRANCH: '{{ target_branch }}'
  JULES_WORKER_BRANCH: '{{ worker_branch }}'

jobs:
  summary-request:
    runs-on: {{ runner }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: '{{ worker_branch }}'
          fetch-depth: 1

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Post summary request comment
        env:
          GH_TOKEN: {{ gha_expr("secrets.GITHUB_TOKEN") }}
        run: |
          set -euo pipefail
          PR_NUMBER={{ gha_expr("github.event.pull_request.number") }}
          jlo workflow gh pr comment-summary-request "$PR_NUMBER"
