  generate-decider-matrix:
    needs: [check-schedule, wait-after-observers]
    if: |
      always() &&
      fromJSON(needs.check-schedule.outputs.json).should_run == true &&
      (needs.wait-after-observers.result == 'success' || needs.wait-after-observers.result == 'skipped')
    runs-on: {{ runner }}
    timeout-minutes: 10
    outputs:
      json: {{ gha_expr("steps.matrix.outputs.json") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: '{{ worker_branch }}'
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Check for pending events
        id: matrix
        run: |
          set -euo pipefail
          HAS_PENDING=$(jlo workflow workspace inspect | jq '(.events.pending_files | length) > 0')
          echo "json={\"has_pending\":$HAS_PENDING}" >> "$GITHUB_OUTPUT"
