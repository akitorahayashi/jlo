# Jules Run Implementer
#
# Manual execution of the implementer layer for a specific issue.
# Separated from the main orchestration workflow to allow targeted execution.

name: Jules Run Implementer

on:
  workflow_dispatch:
    inputs:
      issue_file:
        description: 'Issue file path'
        type: string
        required: true
      prompt_preview:
        description: 'Show prompts without executing'
        type: boolean
        default: false

permissions:
  contents: write
  issues: write
  pull-requests: write

env:
  JLO_TARGET_BRANCH: {{ gha_expr("vars.JLO_TARGET_BRANCH") }}
  JULES_WORKER_BRANCH: {{ gha_expr("vars.JULES_WORKER_BRANCH") }}

jobs:
  implementers:
    runs-on: {{ runner }}
    steps:
      - name: Validate branch variables
        run: |
          set -euo pipefail
          if [ -z "${JLO_TARGET_BRANCH:-}" ]; then
            echo "::error::JLO_TARGET_BRANCH is required."
            exit 1
          fi
          if [ -z "${JULES_WORKER_BRANCH:-}" ]; then
            echo "::error::JULES_WORKER_BRANCH is required."
            exit 1
          fi

      - uses: actions/checkout@v4
        with:
          ref: {{ gha_expr("env.JULES_WORKER_BRANCH") }}
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Configure Git
        if: {{ gha_expr("inputs.prompt_preview != true") }}
        uses: ./.github/actions/configure-git

      - name: Run implementer
        env:
          JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
        uses: ./.github/actions/run-implementer
        with:
          issue_file: {{ gha_expr("inputs.issue_file") }}
          prompt_preview: {{ gha_expr("inputs.prompt_preview") }}
          target_branch: {{ gha_expr("env.JLO_TARGET_BRANCH") }}
