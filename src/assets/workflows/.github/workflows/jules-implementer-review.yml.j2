name: Jules Implementer Review

on:
  push: {}

permissions:
  pull-requests: write
  contents: read

jobs:
  auto-review:
    runs-on: {{ runner }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 1
          token: {{ gha_expr("secrets.JLO_BOT_TOKEN") }}

      - name: Add Review Comments
        env:
          GH_TOKEN: {{ gha_expr("secrets.JLO_BOT_TOKEN") }}
          BRANCH_NAME: {{ gha_expr("github.ref_name") }}
          REPO: {{ gha_expr("github.repository") }}
        run: |
          set -euo pipefail
          if [ -z "${GH_TOKEN:-}" ]; then
            echo "::error::Missing GH_TOKEN (secrets.JLO_BOT_TOKEN). Refusing to fall back to the default workflow token."
            exit 1
          fi

          if ! command -v gh >/dev/null 2>&1; then
            echo "::error::Missing gh CLI."
            exit 1
          fi
          git fetch origin jules --depth=1
          mapfile -t contract_paths < <(git ls-tree -r --name-only origin/jules:.jules/roles | awk '/contracts.yml$/')
          contract_count=$(printf '%s\n' "${contract_paths[@]}" | wc -l | tr -d ' ')
          if [ "$contract_count" -eq 0 ]; then
            echo "::error::No contracts.yml found under .jules/roles on jules branch."
            exit 1
          fi

          prefixes=()
          for path in "${contract_paths[@]}"; do
            prefix=$(git show "origin/jules:.jules/roles/$path" | awk -F':' '/^branch_prefix:/ {gsub(/^[[:space:]]+|[[:space:]]+$/, "", $2); gsub(/["'\'']/, "", $2); print $2; exit}')
            if [ -n "$prefix" ]; then
              prefixes+=("$prefix")
            fi
          done

          prefix_count=$(printf '%s\n' "${prefixes[@]}" | wc -l | tr -d ' ')
          if [ "$prefix_count" -eq 0 ]; then
            echo "::error::No branch_prefix entries found in contracts.yml on jules branch."
            exit 1
          fi

          matching_prefix=""
          for prefix in "${prefixes[@]}"; do
            if [[ "$BRANCH_NAME" == "$prefix"* ]]; then
              matching_prefix="$prefix"
              break
            fi
          done

          if [ -z "$matching_prefix" ]; then
            echo "::notice::Branch $BRANCH_NAME does not match known branch prefixes. Skipping review."
            exit 0
          fi

          suffix="${BRANCH_NAME#"$matching_prefix"}"
          if [[ ! "$suffix" =~ ^([a-z0-9]+)-([a-z0-9]{6})- ]]; then
            echo "::notice::Branch $BRANCH_NAME does not include label/id pattern. Skipping review."
            exit 0
          fi

          echo "Waiting for PR to be created for branch $BRANCH_NAME..."
          PR_NUMBER=""

          # Retry for up to 60 seconds to allow time for PR creation after push
          for i in {1..12}; do
            PR_NUMBER=$(gh pr list --head "$BRANCH_NAME" --repo "$REPO" --json number -q '.[0].number')
            if [ -n "$PR_NUMBER" ]; then
              echo "Found PR #$PR_NUMBER"
              break
            fi
            sleep 5
            echo "Retrying... ($i/12)"
          done

          if [ -z "$PR_NUMBER" ]; then
            echo "No PR found for branch $BRANCH_NAME within timeout. Skipping review comments."
            exit 0
          fi

          # Check if we already commented to avoid duplicates (since push triggers on every commit)
          COMMENTS=$(gh pr view "$PR_NUMBER" --repo "$REPO" --json comments -q '.comments[].body')
          if echo "$COMMENTS" | grep -q "/gemini summary"; then
            echo "Review comments already exist. Skipping."
            exit 0
          fi

          echo "Posting review comments..."
          gh pr comment "$PR_NUMBER" --repo "$REPO" --body "/gemini summary"
          gh pr comment "$PR_NUMBER" --repo "$REPO" --body "/gemini review"
          gh pr comment "$PR_NUMBER" --repo "$REPO" --body "@coderabbitai review"
