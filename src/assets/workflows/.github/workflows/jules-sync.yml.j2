name: Sync target branch to worker

on:
  push:
  workflow_call:
  workflow_dispatch:

env:
  JLO_TARGET_BRANCH: {{ gha_expr("vars.JLO_TARGET_BRANCH") }}
  JULES_WORKER_BRANCH: {{ gha_expr("vars.JULES_WORKER_BRANCH") }}

jobs:
  check-jules-branch:
    if: {{ gha_expr("github.event_name != 'push' || github.ref_name == env.JLO_TARGET_BRANCH") }}
    runs-on: {{ runner }}
    permissions:
      contents: read
    outputs:
      exists: {{ gha_expr("steps.check-branch.outputs.exists") }}
    steps:
      - name: Validate branch variables
        run: |
          set -euo pipefail
          if [ -z "${JLO_TARGET_BRANCH:-}" ]; then
            echo "::error::JLO_TARGET_BRANCH is required."
            exit 1
          fi
          if [ -z "${JULES_WORKER_BRANCH:-}" ]; then
            echo "::error::JULES_WORKER_BRANCH is required."
            exit 1
          fi

      - name: Check if jules branch exists
        id: check-branch
        env:
          GH_TOKEN: {{ gha_expr("github.token") }}
        run: |
          if gh api repos/{{ gha_expr("github.repository") }}/branches/${JULES_WORKER_BRANCH} --silent 2>/dev/null; then
            echo "exists=true" >> "$GITHUB_OUTPUT"
          else
            echo "exists=false" >> "$GITHUB_OUTPUT"
          fi

  sync:
    needs: check-jules-branch
    if: needs.check-jules-branch.result == 'success'
    runs-on: {{ runner }}
    permissions:
      contents: write
    steps:
      - name: Validate branch variables
        run: |
          set -euo pipefail
          if [ -z "${JLO_TARGET_BRANCH:-}" ]; then
            echo "::error::JLO_TARGET_BRANCH is required."
            exit 1
          fi
          if [ -z "${JULES_WORKER_BRANCH:-}" ]; then
            echo "::error::JULES_WORKER_BRANCH is required."
            exit 1
          fi

      - uses: actions/checkout@v4
        with:
          ref: {{ gha_expr("env.JLO_TARGET_BRANCH") }}
          fetch-depth: 0
          token: {{ gha_expr("secrets.JLO_BOT_TOKEN") }}

      - name: Configure Git
        uses: ./.github/actions/configure-git

      - name: Ensure worker branch exists
        run: |
          set -euo pipefail
          git fetch origin "${JLO_TARGET_BRANCH}" --depth=1
          if git ls-remote --exit-code --heads origin "${JULES_WORKER_BRANCH}" >/dev/null 2>&1; then
            git fetch origin "${JULES_WORKER_BRANCH}" --depth=1
            git checkout -B "${JULES_WORKER_BRANCH}" "origin/${JULES_WORKER_BRANCH}"
          else
            git checkout -B "${JULES_WORKER_BRANCH}" "origin/${JLO_TARGET_BRANCH}"
          fi

      - name: Merge target branch into worker
        run: |
          git fetch origin "$JLO_TARGET_BRANCH"
          # Merge control branch, preferring control-plane code changes.
          git merge "origin/$JLO_TARGET_BRANCH" --no-edit -X theirs || {
            # On conflict, preserve runtime plane from the worker branch.
            git checkout --ours .jules/
            git add .jules/
            git commit --no-edit
          }

      - name: Push changes
        run: git push origin "${JULES_WORKER_BRANCH}"
