# Jules Agent Orchestration
#
# Orchestrates sequential execution.
# Each phase reads state, generates a matrix, then executes sequentially.
{% if use_matrix %}
# Uses matrix strategy with max-parallel=1 for per-task visibility in GitHub Actions UI.
{% else %}
# Observers/planners/implementers run inside a single job to avoid multiple runners.
{% endif %}
#
# Narrator runs first to produce changes context, followed by doctor validation.
# Doctor validation is also handled by jules-automerge.yml as a pre-merge gate.

name: Jules Workflows

on:
  schedule:
    - cron: '0 20 * * *'  # Daily at 20:00 UTC (05:00 JST)
  workflow_dispatch:
    inputs:
      entry_point:
        description: 'Start from layer'
        type: choice
        options:
          - narrator
          - observers
          - deciders
        default: narrator
      wait_minutes:
        description: 'Minutes to wait between layers (Jules async processing time)'
        type: number
        default: 30
      routing_labels:
        description: 'Issue labels eligible for planner/implementer routing (comma-separated)'
        type: string
        default: bugs,feats,refacts,tests,docs

permissions:
  contents: write
  issues: write
  pull-requests: write

concurrency:
  group: jules
  cancel-in-progress: false

env:
  ENTRY_POINT: {{ gha_expr("github.event.inputs.entry_point || 'narrator'") }}
  WAIT_MINUTES: {{ gha_expr("github.event.inputs.wait_minutes || 30") }}
  ROUTING_LABELS: {{ gha_expr("github.event.inputs.routing_labels || 'bugs,feats,refacts,tests,docs'") }}

jobs:
  # ============================================================
  # Phase 1: Run narrator (changes feed generation)
  # ============================================================
  run-narrator:
    if: >-
      vars.JULES_PAUSED != 'true' &&
      (github.event_name == 'schedule' || github.event_name == 'workflow_dispatch') &&
      (github.event.inputs.entry_point || 'narrator') == 'narrator'
    runs-on: {{ runner }}
    timeout-minutes: 30
    env:
      JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Validate .jules workspace exists
        run: |
          if [ ! -d ".jules" ]; then
            echo "::error::.jules directory is missing on the 'jules' branch."
            exit 1
          fi

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Run narrator
        run: |
          jlo run narrator

      - name: Validate workspace (fail-fast)
        run: jlo doctor

  # ============================================================
  # Phase 2: Wait for narrator processing
  # ============================================================
  wait-after-narrator:
    needs: run-narrator
    if: |
      always() &&
      needs.run-narrator.result == 'success'
    runs-on: {{ runner }}
    timeout-minutes: 60
    steps:
      - name: Wait {{ gha_expr("env.WAIT_MINUTES") }} minutes for Jules async processing
        run: |
          echo "Waiting $WAIT_MINUTES minutes for Jules to process narrator PR..."
          sleep $((WAIT_MINUTES * 60))
          echo "Wait complete."

  # ============================================================
  # Phase 3: Generate workstream matrix
  # ============================================================
  generate-workstream-matrix:
    needs: wait-after-narrator
    if: |
      always() &&
      vars.JULES_PAUSED != 'true' &&
      (github.event_name == 'schedule' || github.event_name == 'workflow_dispatch') &&
      (needs.wait-after-narrator.result == 'success' || needs.wait-after-narrator.result == 'skipped')
    runs-on: {{ runner }}
    timeout-minutes: 10
    outputs:
      matrix: {{ gha_expr("steps.matrix.outputs.matrix") }}
      has_workstreams: {{ gha_expr("steps.matrix.outputs.has_workstreams") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Validate .jules workspace
        run: |
          if [ ! -d ".jules" ]; then
            echo "::error::.jules directory is missing on the 'jules' branch."
            exit 1
          fi
          if ! ls .jules/workstreams/*/scheduled.toml >/dev/null 2>&1; then
            echo "::error::No workstream scheduled.toml found under .jules/workstreams/."
            exit 1
          fi

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Generate workstream matrix
        id: matrix
        run: bash .github/scripts/jules-generate-workstream-matrix.sh

  # ============================================================
  # Phase 4: Generate observer matrix (role-level)
  # ============================================================
  generate-observer-matrix:
    needs: generate-workstream-matrix
    if: >-
      needs.generate-workstream-matrix.outputs.has_workstreams == 'true' &&
      (github.event.inputs.entry_point || 'narrator') != 'deciders'
    runs-on: {{ runner }}
    timeout-minutes: 10
    outputs:
      matrix: {{ gha_expr("steps.matrix.outputs.matrix") }}
      has_observers: {{ gha_expr("steps.matrix.outputs.has_observers") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Generate observer matrix
        id: matrix
        env:
          WORKSTREAMS_JSON: {{ gha_expr("needs.generate-workstream-matrix.outputs.matrix") }}
        run: bash .github/scripts/jules-generate-observer-matrix.sh

  # ============================================================
  # Phase 5: Run observers
  # ============================================================
  run-observers:
    needs: [generate-workstream-matrix, generate-observer-matrix]
    if: |
      always() &&
      needs.generate-observer-matrix.result == 'success' &&
      needs.generate-observer-matrix.outputs.has_observers == 'true'
    runs-on: {{ runner }}
    timeout-minutes: 30
{% if use_matrix %}
    strategy:
      fail-fast: false
      max-parallel: 1
      matrix: {{ gha_expr("fromJson(needs.generate-observer-matrix.outputs.matrix)") }}
{% endif %}
    env:
      JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

{% if use_matrix %}
      - name: Run observer {{ gha_expr("matrix.workstream") }} / {{ gha_expr("matrix.role") }}
        env:
          WORKSTREAM: {{ gha_expr("matrix.workstream") }}
          ROLE: {{ gha_expr("matrix.role") }}
        run: |
          jlo run observers --workstream "$WORKSTREAM" --role "$ROLE"
{% else %}
      - name: Run observers sequentially
        env:
          OBSERVER_MATRIX: {{ gha_expr("needs.generate-observer-matrix.outputs.matrix") }}
        run: bash .github/scripts/jules-run-observers-sequential.sh
{% endif %}

  # ============================================================
  # Phase 6: Wait for observer processing
  # ============================================================
  wait-after-observers:
    needs: [generate-observer-matrix, run-observers]
    if: |
      always() &&
      needs.run-observers.result == 'success'
    runs-on: {{ runner }}
    timeout-minutes: 60
    steps:
      - name: Wait {{ gha_expr("env.WAIT_MINUTES") }} minutes for Jules async processing
        run: |
          echo "Waiting $WAIT_MINUTES minutes for Jules to process observer PRs..."
          sleep $((WAIT_MINUTES * 60))
          echo "Wait complete."

  # ============================================================
  # Phase 7: Generate decider matrix (pending events check)
  # ============================================================
  generate-decider-matrix:
    needs: [generate-workstream-matrix, generate-observer-matrix, wait-after-observers]
    if: |
      always() &&
      needs.generate-workstream-matrix.outputs.has_workstreams == 'true' &&
      (needs.generate-observer-matrix.result == 'success' || needs.generate-observer-matrix.result == 'skipped') &&
      (needs.wait-after-observers.result == 'success' || needs.wait-after-observers.result == 'skipped')
    runs-on: {{ runner }}
    timeout-minutes: 10
    outputs:
      matrix: {{ gha_expr("steps.matrix.outputs.matrix") }}
      has_pending: {{ gha_expr("steps.matrix.outputs.has_pending") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Generate decider matrix from pending events
        id: matrix
        env:
          WORKSTREAMS_JSON: {{ gha_expr("needs.generate-workstream-matrix.outputs.matrix") }}
        run: bash .github/scripts/jules-generate-decider-matrix.sh

  # ============================================================
  # Phase 8: Run deciders
  # ============================================================
  run-deciders:
    needs: [generate-decider-matrix]
    if: |
      always() &&
      needs.generate-decider-matrix.result == 'success' &&
      needs.generate-decider-matrix.outputs.has_pending == 'true'
    runs-on: {{ runner }}
    timeout-minutes: 30
{% if use_matrix %}
    strategy:
      fail-fast: false
      max-parallel: 1
      matrix: {{ gha_expr("fromJson(needs.generate-decider-matrix.outputs.matrix)") }}
{% endif %}
    env:
      JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

{% if use_matrix %}
      - name: Run decider for {{ gha_expr("matrix.workstream") }}
        env:
          WORKSTREAM: {{ gha_expr("matrix.workstream") }}
        run: |
          jlo run deciders --workstream "$WORKSTREAM" --scheduled
{% else %}
      - name: Run deciders sequentially
        env:
          DECIDER_MATRIX: {{ gha_expr("needs.generate-decider-matrix.outputs.matrix") }}
        run: bash .github/scripts/jules-run-deciders-sequential.sh
{% endif %}

  # ============================================================
  # Phase 9: Wait for decider processing
  # ============================================================
  wait-after-deciders:
    needs: [generate-decider-matrix, run-deciders]
    if: |
      always() &&
      needs.run-deciders.result == 'success'
    runs-on: {{ runner }}
    timeout-minutes: 60
    steps:
      - name: Wait {{ gha_expr("env.WAIT_MINUTES") }} minutes for Jules async processing
        run: |
          echo "Waiting $WAIT_MINUTES minutes for Jules to process decider PRs..."
          sleep $((WAIT_MINUTES * 60))
          echo "Wait complete."

  # ============================================================
  # Phase 10: Generate planner/implementer matrix (new issues)
  # ============================================================
  generate-planner-matrix:
    needs: [generate-workstream-matrix, generate-decider-matrix, run-deciders, wait-after-deciders]
    if: |
      always() &&
      needs.generate-workstream-matrix.outputs.has_workstreams == 'true' &&
      (needs.generate-decider-matrix.result == 'success' || needs.generate-decider-matrix.result == 'skipped') &&
      (needs.run-deciders.result == 'success' || needs.run-deciders.result == 'skipped') &&
      (needs.wait-after-deciders.result == 'success' || needs.wait-after-deciders.result == 'skipped')
    runs-on: {{ runner }}
    timeout-minutes: 10
    outputs:
      planner_matrix: {{ gha_expr("steps.matrix.outputs.planner_matrix") }}
      has_planners: {{ gha_expr("steps.matrix.outputs.has_planners") }}
      implementer_matrix: {{ gha_expr("steps.matrix.outputs.implementer_matrix") }}
      has_implementers: {{ gha_expr("steps.matrix.outputs.has_implementers") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Generate planner and implementer matrices
        id: matrix
        env:
          WORKSTREAMS_JSON: {{ gha_expr("needs.generate-workstream-matrix.outputs.matrix") }}
          ROUTING_LABELS: {{ gha_expr("env.ROUTING_LABELS") }}
        run: bash .github/scripts/jules-generate-routing-matrices.sh

  # ============================================================
  # Phase 11: Run planners
  # ============================================================
  run-planners:
    needs: [generate-planner-matrix]
    if: |
      always() &&
      needs.generate-planner-matrix.result == 'success' &&
      needs.generate-planner-matrix.outputs.has_planners == 'true'
    runs-on: {{ runner }}
    timeout-minutes: 30
{% if use_matrix %}
    strategy:
      fail-fast: false
      max-parallel: 1
      matrix: {{ gha_expr("fromJson(needs.generate-planner-matrix.outputs.planner_matrix)") }}
{% endif %}
    env:
      JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

      - name: Install jlo
        uses: ./.github/actions/install-jlo

{% if use_matrix %}
      - name: Run planner for {{ gha_expr("matrix.issue") }}
        env:
          ISSUE: {{ gha_expr("matrix.issue") }}
        run: |
          jlo run planners "$ISSUE"
{% else %}
      - name: Run planners sequentially
        env:
          PLANNER_MATRIX: {{ gha_expr("needs.generate-planner-matrix.outputs.planner_matrix") }}
        run: bash .github/scripts/jules-run-planners-sequential.sh
{% endif %}

  # ============================================================
  # Phase 12: Run implementers
  # ============================================================
  run-implementers:
    needs: [generate-planner-matrix]
    if: |
      always() &&
      needs.generate-planner-matrix.result == 'success' &&
      needs.generate-planner-matrix.outputs.has_implementers == 'true'
    runs-on: {{ runner }}
    timeout-minutes: 30
{% if use_matrix %}
    strategy:
      fail-fast: false
      max-parallel: 1
      matrix: {{ gha_expr("fromJson(needs.generate-planner-matrix.outputs.implementer_matrix)") }}
{% endif %}
    env:
      JULES_API_KEY: {{ gha_expr("secrets.JULES_API_KEY") }}
{% if not use_matrix %}
      TARGET_BRANCH: {{ gha_expr("vars.JULES_TARGET_BRANCH || 'main'") }}
{% endif %}
    steps:
      - uses: actions/checkout@v4
        with:
          ref: jules
          fetch-depth: 0

{% if not use_matrix %}
      - name: Install jlo
        uses: ./.github/actions/install-jlo

      - name: Configure Git
        uses: ./.github/actions/configure-git

      - name: Run implementers sequentially
        env:
          IMPLEMENTER_MATRIX: {{ gha_expr("needs.generate-planner-matrix.outputs.implementer_matrix") }}
        run: bash .github/scripts/jules-run-implementers-sequential.sh
{% else %}
      - name: Run implementer for {{ gha_expr("matrix.issue") }}
        uses: ./.github/actions/run-implementer
        with:
          issue_file: {{ gha_expr("matrix.issue") }}
          target_branch: {{ gha_expr("vars.JULES_TARGET_BRANCH || 'main'") }}
{% endif %}
